<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            tools:context=".MainActivity"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Nama Sales"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:visibility="gone"/>





            </LinearLayout>





            <TextView
                android:id="@+id/tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="19/10/2021"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/nomor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="nomor"
                android:visibility="visible"

                />

            <TextView
                android:id="@+id/nama_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="elektrik"
                android:visibility="gone"

                />

            <TextView
                android:id="@+id/nama_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="nama_user"
                android:visibility="gone"

                />





            <TextView
                android:id="@+id/jam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="09:00"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/id_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="09:00"
                android:visibility="gone"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="1dp">



                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(USER) : "
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"/>



                <TextView
                    android:id="@+id/posisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/perusahaan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"/>




            </LinearLayout>




            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="INPUT DATA PERDANA"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:visibility="gone"/>



            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_margin="1dp"
                android:background="#FFFFFF">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="7dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            >








                            <LinearLayout
                                android:id="@+id/pilih_saldo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:padding="5dp"
                                android:background="@drawable/custom3">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Saldo : "
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18dp"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/saldo_sebelumnya"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="20000000"
                                    android:textSize="18dp"
                                    android:textColor="@color/black"/>



                                <EditText
                                    android:id="@+id/nama_saldo"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:inputType="text"
                                    android:padding="8dp"
                                    android:text="DANA"

                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:visibility="visible"
                                    android:layout_marginRight="10dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=">"
                                    android:textSize="28dp"
                                    android:layout_marginRight="10dp"
                                    android:textColor="@color/black"/>


                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Pelanggan"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/black"
                            />

                        <EditText
                            android:id="@+id/nama_pelanggan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background"
                            android:gravity="top"
                            android:hint="Nama Pelanggan"
                            android:padding="8dp"
                            android:text="Tanpa Nama"
                            android:textColor="@color/black"
                            android:textSize="13dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*Nama Barang"
                                android:textColor="@color/black" />



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            >

                            <EditText
                                android:id="@+id/nama_beli"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background"
                                android:focusable="true"
                                android:gravity="top"
                                android:hint="Nama Barang"
                                android:inputType="text"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textSize="13dp"
                                android:visibility="visible"/>







                            <Button
                                android:id="@+id/pilihitem"
                                android:layout_width="150dp"
                                android:layout_height="30dp"
                                android:text="PILIH ITEM"
                                android:textSize="10dp"
                                android:textColor="@color/white"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/custom2"/>




                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            >

                            <TextView
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:text="*Harga Modal"
                                android:textColor="@color/black"
                                android:layout_marginRight="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*Harga Jual"
                                android:textColor="@color/black" />



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <EditText
                            android:layout_marginTop="5dp"
                            android:id="@+id/hargamodal"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background"
                            android:focusable="true"
                            android:gravity="top"
                            android:hint="Harga Modal"
                            android:inputType="text"
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:textSize="13dp"
                            android:visibility="visible"
                            android:layout_marginRight="10dp"/>

                            <EditText
                                android:layout_marginTop="5dp"
                                android:id="@+id/harga"
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background"
                                android:focusable="true"
                                android:gravity="top"
                                android:hint="Harga Jual"
                                android:inputType="text"
                                android:padding="8dp"
                                android:textColor="@color/black"
                                android:textSize="13dp"
                                android:visibility="visible"/>

                        </LinearLayout>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="7dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/black"
                            android:layout_gravity="top"
                            />







                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sisah Stok"
                                android:textColor="@color/black"
                                android:layout_marginLeft="20dp"
                                android:visibility="gone"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">






                            <EditText
                                android:id="@+id/saldo_saat_ini"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/dasboard"
                                android:focusable="false"
                                android:gravity="top"
                                android:hint=""
                                android:text="0"
                                android:padding="8dp"
                                android:textColor="@color/white"
                                android:textSize="13dp"
                                android:inputType="number"
                                android:visibility="gone"
                                />


                        </LinearLayout>





                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Berita"
                            android:textColor="@color/black"
                            android:visibility="visible"
                            />

                        <EditText
                            android:id="@+id/isi"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@drawable/background"
                            android:focusable="true"
                            android:gravity="top"
                            android:hint="NOMOR PULSA / NOMOR TOKEN / NOMOR LAIN / BOLEH KOSONG"
                            android:text=""
                            android:padding="8dp"
                            android:textColor="@color/black"
                            android:textSize="13dp"
                            android:visibility="visible"
                            />









                    </LinearLayout>




                </ScrollView>
            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/box"
                    android:layout_marginBottom="2dp"
                    />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="2dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/jumlah"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Modal :            "
                    android:textSize="15dp"
                    android:textStyle="bold|italic"/>


                <TextView
                    android:id="@+id/total_modal"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"
                    android:textStyle="bold|italic"/>

                <TextView
                    android:id="@+id/jumlahformatrp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"
                    android:visibility="gone"
                    android:textStyle="bold|italic"/>



                <Button
                    android:id="@+id/btntotal"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:ellipsize="marquee"
                    android:textSize="8dp"
                    android:textColor="@color/black"
                    android:text="Jumlahkan"
                    android:background="@drawable/custom3"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="0dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/uang"
                android:layout_marginBottom="2dp"
                />

            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:text=":"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="2dp"
                android:textStyle="bold|italic"/>

                <TextView
                    android:id="@+id/subtotal_sementara"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textSize="20dp"
                    android:background="@color/hijaumuda"
                    android:textStyle="bold|italic"/>

                <TextView
                    android:id="@+id/total_non_rp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"
                    android:textStyle="bold|italic"
                    android:visibility="gone"/>



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Margin :            "
                    android:textSize="15dp"
                    android:textStyle="bold|italic"/>


                <TextView
                    android:id="@+id/margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"
                    android:textStyle="bold|italic"/>



            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/black"
                />




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <Button
                    android:id="@+id/input"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:ellipsize="marquee"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:text="Tambah"
                    android:background="@drawable/custom4"/>

                <EditText
                    android:id="@+id/iddelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:layout_marginLeft="30dp"
                    android:visibility="gone"
                    android:text="1"/>



                <Button
                    android:id="@+id/hapus"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:ellipsize="marquee"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:text="HAPUS"
                    android:background="@drawable/custom4"
                    android:layout_marginLeft="10dp"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/btnupdate"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:ellipsize="marquee"
                    android:textSize="10dp"
                    android:text="Edit"
                    android:textColor="@color/white"
                    android:background="@drawable/custom4"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/refresh"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:ellipsize="marquee"
                    android:textSize="10dp"
                    android:textColorLink="@color/black"
                    android:text="REFRESH"
                    android:textColor="@color/white"
                    android:background="@drawable/custom4"
                    android:layout_marginLeft="10dp"/>







            </LinearLayout>
            <EditText
                android:id="@+id/validasicaripenjualan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="3"
                android:layout_marginLeft="30dp"
                android:visibility="gone"
                android:text=""/>

            <Button
                android:id="@+id/teshapus"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:ellipsize="marquee"
                android:textSize="10dp"
                android:textColorLink="@color/black"
                android:text="teshapus"
                android:textColor="@color/white"
                android:background="@drawable/custom4"
                android:layout_marginLeft="10dp"
                android:visibility="gone"/>

        </LinearLayout>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                >

                <ListView
                    android:id="@+id/listinputperdana"
                    android:layout_width="match_parent"
                    android:layout_height="211dp"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="SUBTOTAL :            "
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="bold|italic"/>


            <TextView
                android:id="@+id/subtotal"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold|italic"/>

            <TextView
                android:id="@+id/subtotal2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                android:visibility="gone"/>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            android:layout_gravity="top"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Transfer"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Cash"
                android:textColor="@color/black"
                android:layout_marginLeft="21dp"
                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone">

            <EditText
                android:id="@+id/transfer"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroundkotakhitam"
                android:focusable="true"
                android:gravity="top"
                android:hint="Nominal Tranfer"
                android:inputType="numberDecimal"
                android:digits="0123456789.,"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:text="0"/>


            <EditText
                android:id="@+id/cashh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/backgroundkotakhitam"
                android:focusable="false"
                android:gravity="top"
                android:hint="Nonimal Cash"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:inputType="number"
                android:text="0"

                />




        </LinearLayout>



        <Button
            android:id="@+id/btnpembayaran"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:ellipsize="marquee"
            android:textSize="10dp"
            android:textColorLink="@color/black"
            android:text="VERIFIKASI"
            android:textColor="@color/white"
            android:background="@drawable/custom2"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>




</LinearLayout>