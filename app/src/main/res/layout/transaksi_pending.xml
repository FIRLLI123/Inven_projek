<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F5F5">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/nomor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nomor"
            android:visibility="gone"/>




        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(USER) : "
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>



        <TextView

            android:id="@+id/nama_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/posisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/perusahaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/bidang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@color/birumuda">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/back"
                    android:layout_marginBottom="2dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Draft"
                android:layout_marginRight="44dp"
                android:layout_gravity="center|center_horizontal"
                android:gravity="center"
                android:textColor="@color/white" />




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="13dp">



            <android.support.v7.widget.CardView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:id="@+id/klik_tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    android:background="@drawable/bulat_transparan_putih"

                    >

                    <ImageView

                        android:layout_marginRight="1dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/date"/>

                    <TextView
                        android:id="@+id/tanggal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="2023/12/10"
                        android:textSize="15dp"
                        android:layout_marginBottom="1dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginLeft="9dp">

                <LinearLayout
                    android:id="@+id/cari_tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    android:background="@drawable/bulat_transparan_putih"

                    >

                    <ImageView

                        android:layout_marginRight="1dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@drawable/search"/>



                </LinearLayout>

            </android.support.v7.widget.CardView>



        </LinearLayout>


    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="1dp">











        <Button
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:text="Cari"
            android:id="@+id/carisumbayar"
            android:background="@drawable/custom3"
            android:visibility="gone"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="4dp">




        <TextView
            android:id="@+id/semua"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:text="SEMUA"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="10dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="2dp"
            android:textColor="@color/abutua"
            android:background="@drawable/custom10"/>



        <TextView
            android:id="@+id/fisik"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:text="FISIK"
            android:textStyle="bold"
            android:padding="10dp"
            android:textSize="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/custom10"/>



        <TextView
            android:id="@+id/elektrik"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:text="ELEKTRIK"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/custom10"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="kategori"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:id="@+id/kategori"
            android:visibility="gone"/>




    </LinearLayout>










    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                android:visibility="gone">





            </LinearLayout>






        </LinearLayout>




        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/view_line_dotted"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/view_line_dotted"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:visibility="gone"/>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardBackgroundColor="#FFFFFF"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginLeft="5dp"
                >

                <ImageView
                    android:id="@+id/btnpembayaran"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/blank"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Rincian"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:layout_marginBottom="1dp"/>






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                </LinearLayout>



            </LinearLayout>



        </android.support.v7.widget.CardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/abumuda"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"/>





        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:cardBackgroundColor="#FFFFFF"
            android:visibility="visible">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                >

                <ListView
                    android:id="@+id/listinputperdana"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_marginTop="1dp"
                    android:background="@color/abu">





                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="0dp"
                    android:orientation="horizontal"
                    android:background="@color/birumuda">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="PENJUALAN ELEKTRIK"
                        android:gravity="center"
                        android:layout_gravity="left"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="sans-serif-medium" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:layout_marginRight="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Cek Detail "
                            android:gravity="center"
                            android:layout_gravity="left"
                            android:textSize="15dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="sans-serif-medium" />

                        <ImageView
                            android:layout_marginRight="1dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/search_detail"/>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:background="@color/abumuda">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="10dp">


                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="ITEM"
                            android:textSize="15dp"
                            android:textColor="@color/black"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="15dp"
                            android:textColor="@color/black"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:id="@+id/item_elektrik"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"/>



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="10dp">


                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="MODAL"
                            android:textSize="15dp"
                            android:textColor="@color/black"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="15dp"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:id="@+id/modal_elektrik"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="10dp">


                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="TOTAL PENJUALAN"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="15dp"
                            android:textColor="@color/black"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:id="@+id/penjualan_elektrik"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:textColor="@color/black"/>



                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="17dp"
                        android:layout_marginTop="10dp">


                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:text="MARGIN"
                            android:textStyle="italic|bold"
                            android:textSize="15dp"
                            android:textColor="@color/black"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="15dp"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:id="@+id/margin_elektrik"
                            android:textStyle="italic|bold"
                            android:textSize="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"/>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>









            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/view_line_dotted"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>


            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginTop="10dp"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modal Terjual   :"
                    android:textSize="21dp"
                    android:textStyle="bold|italic"
                    android:textColor="@color/merah"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/modal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:textSize="21dp"
                    android:textStyle="bold|italic"
                    android:textColor="@color/merah"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PENJUALAN  :"
                    android:textSize="21dp"
                    android:textStyle="bold|italic"
                    android:textColor="@color/merah"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/penjualan"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:textSize="21dp"
                    android:textStyle="bold|italic"
                    android:textColor="@color/merah"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MARGIN   :"
                    android:textSize="21dp"
                    android:textStyle="bold|italic"
                    android:textColor="@color/merah"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/hijau"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000000000000000000"
                        android:id="@+id/margin"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:textSize="21dp"
                        android:textStyle="bold|italic"
                        android:textColor="@color/white"/>

                </LinearLayout>


            </LinearLayout>











            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:visibility="gone">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Sales :"
                    android:textSize="15dp"/>



                <EditText

                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/namasaleslist"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:focusable="false"/>


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cek Detail"
                    android:id="@+id/cekdetail"/>






            </LinearLayout>

            <Button
                android:id="@+id/jumlahkan"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="JUMLAHKAN"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:background="@drawable/custom2"
                android:layout_marginTop="5dp"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>