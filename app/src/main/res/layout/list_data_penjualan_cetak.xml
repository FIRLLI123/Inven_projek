<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginBottom="3dp">
                <ImageView
                    android:id="@+id/hapus_data_list"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginLeft="4dp"
                    android:layout_width="28dp"
                    android:layout_height="25dp"
                    android:background="@drawable/recycle"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >




            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Item"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/merahmuda"
                android:layout_marginLeft="1dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="QTY"
                android:textColor="@color/white"
                android:textStyle="bold"

                android:background="@color/merahmuda"
                android:layout_marginLeft="1dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/merahmuda"
                android:layout_marginLeft="1dp"
                android:gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/nama_list"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Perdana 35 GB"
            android:textColor="@color/black"
            android:layout_marginLeft="29dp"
            android:gravity="left"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">






            <TextView
                android:id="@+id/qty_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:layout_marginRight="5dp"
                android:textColor="@color/black"
                android:layout_marginLeft="29dp"
                android:gravity="left"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:textColor="@color/black"
                android:layout_marginLeft="1dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@"
                android:textColor="@color/black"
                android:layout_marginLeft="1dp"
                android:gravity="center"/>



            <TextView
                android:id="@+id/harga_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50000"
                android:textColor="@color/black"
                android:gravity="center"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="right"
    android:gravity="right"
    android:layout_marginRight="29dp">


    <TextView
        android:id="@+id/total_harga_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50000"
        android:textColor="@color/black"
        android:gravity="center"/>


</LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">


            <TextView
                android:id="@+id/isi_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="082249495858"
                android:textColor="@color/black"
                android:layout_marginLeft="29dp"
                android:gravity="left"/>



        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/view_line_dotted"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="7dp"
            android:visibility="visible"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <TextView

                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="TOTAL"
                android:textStyle="bold|italic"
                android:textSize="15dp"
                android:textColor="@color/black"
                />

            <TextView

                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textStyle="bold|italic"
                android:textSize="15dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/total_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nama outlet"

                android:textStyle="bold|italic"
                android:gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <TextView

                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="ID"
                android:textStyle="bold|italic"
                android:textSize="15dp"
                android:textColor="@color/black"
                />

            <TextView

                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textStyle="bold|italic"
                android:textSize="15dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/id_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nama outlet"

                android:textStyle="bold|italic"
                android:gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>







    </LinearLayout>

</LinearLayout>


















