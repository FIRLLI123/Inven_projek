<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Data_barang"
    android:orientation="vertical"
    android:background="#F3F3F3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp"
        android:visibility="gone">



        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(USER) : "
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>


        <TextView

            android:id="@+id/nama_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/posisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/perusahaan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>




    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text=" List Saldo Mu.."
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Saldo :"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/namasalesforward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"/>



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/namabarang"
            android:textSize="15dp"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:imeOptions="actionSend"
            android:background="@drawable/backgroundkotakhitam"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:text="Cari"
            android:id="@+id/caridatabarang"
            android:background="@drawable/custom3"/>

    </LinearLayout>


    <TextView
        android:id="@+id/nama_saldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="namaitem"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/sisa_saldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sisa_saldo"
        android:visibility="gone"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/tambah_item"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:ellipsize="marquee"
        android:textSize="10dp"
        android:textColorLink="@color/black"
        android:textColor="@color/white"
        android:background="@drawable/plus"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="1dp"/>


    <ImageView
        android:id="@+id/migrasi"
        android:layout_width="45dp"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:ellipsize="marquee"
        android:textSize="10dp"
        android:textColorLink="@color/black"
        android:textColor="@color/white"
        android:background="@drawable/migrasi"
        android:layout_marginLeft="10dp"
        android:padding="2dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="1dp"/>



</LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">



        <TextView
            android:id="@+id/tanggal_awal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2023/11/01"
            android:textSize="15dp"
            android:layout_marginBottom="1dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:visibility="gone"/>

        <android.support.v7.widget.CardView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:id="@+id/klik_tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp"
                android:background="@drawable/bulat_transparan_putih"

                >

                <ImageView

                    android:layout_marginRight="1dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/date"/>

                <TextView
                    android:id="@+id/tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2023/12/10"
                    android:textSize="15dp"
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginLeft="9dp">

            <LinearLayout
                android:id="@+id/cari_tanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp"
                android:background="@drawable/bulat_transparan_putih"

                >

                <ImageView

                    android:layout_marginRight="1dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/search"/>



            </LinearLayout>

        </android.support.v7.widget.CardView>





    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="2dp">

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saldo Cash mu : "
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/saldo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp.0"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_gravity="left"

        android:textColor="@color/black"/>

</LinearLayout>




    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/black"/>



    <LinearLayout
        android:id="@+id/blank_gambar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="19dp"
            android:text="Upss !"/>

        <ImageView
            android:id="@+id/blank"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/notfound"
            />


        <TextView
            android:visibility="visible"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="19dp"
            android:textColor="#8C8C8C"
            android:text="................................"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#FFFFFF">


        <ListView
            android:id="@+id/listdataoutlet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>








</LinearLayout>